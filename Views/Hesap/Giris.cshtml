@model todolist.Models.ViewModels.GirisViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark shadow-lg">
                <div class="card-header">
                    <h3 class="text-white mb-0">Giriş Yap</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Giris" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="KullaniciAdi" class="form-label text-white"></label>
                            <input asp-for="KullaniciAdi" class="form-control" />
                            <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sifre" class="form-label text-white"></label>
                            <input asp-for="Sifre" class="form-control" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="BeniHatirla" class="form-check-input" />
                            <label asp-for="BeniHatirla" class="form-check-label text-white"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </button>
                            <a asp-action="Kayit" class="btn btn-outline-secondary">
                                <i class="bi bi-person-plus"></i> Kayıt Ol
                            </a>
                            <a asp-action="SifreSifirla" class="btn btn-outline-warning">
                                <i class="bi bi-key"></i> Şifremi Unuttum
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 